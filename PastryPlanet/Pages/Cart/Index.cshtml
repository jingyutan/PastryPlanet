@page
@model PastryPlanet.Pages.Cart.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">

    @foreach (var item in Model.CartItems)
    {
    <div class="col-sm-6 col-md-4 col-lg-3 card text-white bg-dark">

        <form method="post">

            <a href="/Products/Details?id=@item.Product.ID">
                <img src="@Url.Content("~/" + item.Product.Image)" style="width: 160px;" />
            </a>
            <h3>@item.Product.Name</h3>
            <p>Total: $@Convert.ToDecimal((item.Product.Price * item.Quantity))<span>0</span></p>
            <label asp-for="@item.Quantity">Quantity</label>
            <input asp-for="@item.Quantity" type="text" name="Quantity" class="form-control col-3">
            <button type="submit" class="btn btn-primary" asp-page-handler="update" asp-route-id="@item.ProductID">
                Update
            </button>
            <button type="submit" class="btn btn-danger" asp-page-handler="delete" asp-route-id="@item.ProductID">
                Delete
            </button>
        </form>       
    </div>
    }
</div>

    

        <div class="text-right">
            <a href="/Products" class="btn btn-success" role="button">Go Back to Shopping</a>
        </div>
        <div class="text-right">
            <a href="/Checkout" class="btn btn-success" role="button">Check Out</a>
        </div>

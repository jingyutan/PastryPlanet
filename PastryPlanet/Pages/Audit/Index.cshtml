@page
@model PastryPlanet.Pages.Audit.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Audit Log</h1>


<a asp-page="./ProductAudit" style="text-decoration: underline;">Check audits made previously</a>
<p>
</p>
<table class="table" style="color:white;">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuditRecord[0].AuditActionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuditRecord[0].Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AuditRecord[0].DateTimeStamp)
            </th>
            <th>Product Record</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AuditRecord) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuditActionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeStamp)
            </td>

            @if (item.KeyProductID == 0)
            {
                <td></td>
            }
            else
            {
                <td>
                    <a asp-page="./ProductAuditDetails" asp-route-id="@item.KeyProductID">Product</a>
                </td>
            }

            <td>
                <a asp-page="./Edit" asp-route-id="@item.Audit_ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Audit_ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Audit_ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

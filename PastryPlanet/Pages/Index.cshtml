@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid">
    <div>
        <div class="text-center" style="color:white">
            <h1 class="display-4">Hello</h1>
            <p>Enjoy your stay :)</p>
        </div>
    </div>
    <div>
        <div id="carousel" class="carousel slide carousel-fade" data-ride="carousel" style="border:solid;border-color:white;border-radius:5 px;">
<!--------------------------------------- carousel slide indicator ---------------------------->
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
<!--------------------------------------- carousel individiual slide items ---------------------------->
            <div class="carousel-inner">
                <div class="carousel-item active fade">
                    <img class="d-block w-100" src="~/carouselimages/cheesecake2.jpg" alt="First slide"style="height:400px ;width:500px; opacity:0.8;">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Cheesecake</h5>
                    </div>
                </div>


                <div class="carousel-item">
                    <img class="d-block w-100" src="~/carouselimages/cookie2.jpg" alt="Second slide"style="height:400px ;width:500px; opacity:0.8;">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Cookie</h5>
                    </div>
                </div>


                <div class="carousel-item">
                    <img class="d-block w-100" src="~/carouselimages/crossaint2.jpg" alt="Third slide"style="height:400px ;width:500px; opacity:0.8;">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Croissant</h5>
                    </div>
                </div>
<!--------------------------------------- carousel navigation buttons ---------------------------->
                <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev" >
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only" >Previous</span>
                </a>

                <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>

